<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sufara.ba.edu.ibu.sufara.GameActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img1"
            android:layout_gravity="left|top"
            android:src="@drawable/alif" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img2"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/da" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img3"
            android:layout_gravity="right|top"
            android:src="@drawable/ha" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img4"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/shin" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img5"
            android:layout_gravity="center"
            android:src="@drawable/ta" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img6"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/thsa" />

        <Button
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/btnPrevGame"
            android:layout_gravity="left|bottom"
            android:background="@drawable/left" />

        <Button
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/btnNextGame"
            android:layout_gravity="right|bottom"
            android:background="@drawable/right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgAnswer"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>
</RelativeLayout>
